<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MuscleMateFront" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/grafit</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SnowBg" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="MatchBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="NavBarBg" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/deep_blue</item>
    </style>

    <style name="LogoStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ImageLogoStyleWhiteBg" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/logo_dark</item>
    </style>

    <style name="ImageLogoStyleSnowBg" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/logo_dark</item>
    </style>

    <style name="LoginSignupStyle" parent="@android:style/Widget.Button">
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryTextStyleWhiteBg" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="HeadingStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">@color/pale_purple</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <style name="TellMoreInputStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/blue_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@color/pale_purple</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="NumberPickerStyle" parent="">
        <item name="np_textColor">@color/blue_gray</item>
        <item name="np_selectedTextColor">@color/white</item>
        <item name="np_dividerColor">@color/grafit</item>
        <item name="np_dividerDistance">20dp</item>
        <item name="np_dividerThickness">1dp</item>
        <item name="np_textSize">14sp</item>
        <item name="np_selectedTextSize">14sp</item>
        <item name="np_typeface">@font/lato</item>
        <item name="np_wheelItemCount">5</item>
        <item name="np_wrapSelectorWheel">true</item>
    </style>

    <style name="WeightLossIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">"@drawable/scale_dark"</item>
    </style>

    <style name="MaintenanceIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">"@drawable/flex_dark"</item>
    </style>

    <style name="MuscleGainIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">"@drawable/arms_dark"</item>
    </style>

    <style name="BorderOnlyButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_rounded_corners_dark</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavBarIcons" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/deep_blue</item>
        <item name="android:layout_height">70dp</item>
        <item name="itemIconSize">40dp</item>
        <item name="itemIconTint">@drawable/icons_dark</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="UsernameStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="SecondaryTextStyleSnowBg" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:color">@color/blue</item>
    </style>

    <style name="addFriendTextStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/purple_inactive</item>
    </style>

    <style name="hideTextStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/pale_purple</item>
    </style>

    <style name="simpleTextStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bellStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="tint">@color/pale_purple</item>
        <item name="android:background">@color/deep_blue</item>
    </style>

    <style name="calendarIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:src">@drawable/calendar_dark</item>
        <item name="android:backgroundTint">@color/deep_blue</item>
    </style>

    <style name="SanSerifButton" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/deep_blue</item>
    </style>

    <style name="regularText" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="simpleBlueText" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="LevelInfoStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/blue_gray</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="crownIconStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/crown_dark</item>
    </style>

    <style name="buttonsAsText">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grafit</item>
        <item name="android:backgroundTint">@color/deep_blue</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="fireIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/fire_dark</item>
    </style>

    <style name="personIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/person_dark</item>
    </style>

    <style name="dumbbellIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/dumbbell_dark</item>
    </style>

    <style name="folderIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:drawableTop">@drawable/folder_dark</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:drawableTop">@drawable/edit_dark</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="startIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:drawableTop">@drawable/start_dark</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="medalIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/medal_dark</item>
    </style>

    <style name="starIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/star_dark</item>
    </style>

    <style name="xpStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">@color/blue_gray</item>
    </style>

    <style name="cookieIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/cookie_dark</item>
    </style>

    <style name="tapeIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/tape_dark</item>
    </style>

    <style name="settingsIcon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/settings_dark</item>
    </style>

</resources>